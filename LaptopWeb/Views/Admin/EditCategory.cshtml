@model LaptopWeb.Models.tbl_category

@{
    ViewBag.Title = "Chỉnh sửa phân loại";
    Layout = "~/Views/Shared/_ManagamentLayout.cshtml";
}


<div class="row">
    <div class="card">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-body">
                <h4 class="card-title">Chỉnh sửa phân loại quảng cáo</h4>
                @Html.ValidationSummary(true)
                @Html.HiddenFor(m => m.id)
                <div class="form-group row">
                    <label class="control-label col-form-label col-sm-3">Tên loại</label>
                    <div class="col-sm-9">
                        @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên phân loại", @type = "text" } })
                        @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-error" })
                    </div>
                </div>
            </div>
            <div class="border-top">
                <div class="card-body button-submit col-sm-9">
                    <input type="submit" value="Chỉnh sửa" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>