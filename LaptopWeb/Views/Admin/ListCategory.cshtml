@model IEnumerable<LaptopWeb.Models.tbl_category>
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_ManagamentLayout.cshtml";
}
@section PageCss{
    <link rel="stylesheet" href="~/Public/css/Admin/admin.css" asp-append-version="true" />
}
<h2>Quản lý loại sản phẩm</h2>

<div class="btn btn-info add-new">
    @Html.ActionLink("Thêm mới", "CreateCategory")
</div>

@if (@ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Tên sản phẩm</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.name)</td>
            <td>
                [@Html.ActionLink("Sửa", "EditCategory", new { id = item.id })]
            </td>
        </tr>
    }
</table>


