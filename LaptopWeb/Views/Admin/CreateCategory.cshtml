@model LaptopWeb.ViewModels.CategoryViewModel
@{
    ViewBag.Title = "Thêm mới phân loại";
    Layout = "~/Views/Shared/_ManagamentLayout.cshtml";
}


<div class="row">
    <div class="card">
        @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card-body">
                <h4 class="card-title">Thêm phân loại quảng cáo</h4>
                @if (@ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
                <div class="form-group row">
                    <label class="control-label col-form-label col-sm-3">Tên loại</label>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên phân loại", @type = "text" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-error" })
                    </div>
                </div>
            </div>
            <div class="border-top">
                <div class="card-body button-submit col-sm-9">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>